<section class="content-header">
</section>
<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Role</h3>
      <div class="box-tools pull-right">
        <div class="btn-group">

          <%= link_to "Add Role", new_role_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="box-body">
      <div class="">
        <table class="table" id="roles-table" >
          <thead>
            <tr>
              <th> Role Name </th>
              <th> Status </th>
            </tr>
          </thead>
          <tbody>
            <% @roles.each do |role| %>
              <tr>
                <td><%= role.name %></td>
                <td><%= role.status.humanize %></td>
                <td><%= render "actions", role: role %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
